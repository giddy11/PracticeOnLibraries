<Window x:Class="CaculatorUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaculatorUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBox Width="100"
                     HorizontalAlignment="Left"
                     Margin="20"
                     Name="txtBox1"/>

            <TextBox Width="20"
                     HorizontalAlignment="Left"
                     Margin="100 20 0 0"
                     Name="txtBox2"/>

            <TextBox Width="100"
                     HorizontalAlignment="Left"
                     Margin="20"
                     Name="txtBox3"/>

            <Button Width="40"
                    Height="20"
                    Content="Solve"
                    Click="Solve_Click"/>

            <TextBox Width="100"
                     HorizontalAlignment="Left"
                     Margin="20"
                     Name="txtBox4"/>
        </StackPanel>
    </Grid>
</Window>
